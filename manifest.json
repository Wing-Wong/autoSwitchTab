{
    "manifest_version": 3,
    "name": "标签页自动切换器",
    "version": "1.0",
    "description": "自动切换已打开的标签页，并可配置是否刷新和停留时间",
    "permissions": [
        "tabs",
        "storage",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.svg",
            "48": "icons/icon48.svg",
            "128": "icons/icon128.svg"
        },
        "icons": {
            "16": "icons/icon16.svg",
            "48": "icons/icon48.svg",
            "128": "icons/icon128.svg"
        }
    }
}